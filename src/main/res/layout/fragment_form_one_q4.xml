<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ededed"
    android:id="@+id/linearLayoutFormOneQuestion4"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/topLable"
        android:textSize="25sp"
        android:gravity="center"
        android:background="#E1E2D4"
        android:text="4 of 5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/textview"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#808080"
        android:maxLines="4"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLable"
        android:text="Who restricted you from observing the voting process? \n ٓآپ کو کس نے روکا؟"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/textview"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayoutQuestionFourFormOne"

        android:weightSum="8"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/policeButtonFormOne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_selector"
            android:text="Police \n پولیس" />

        <Button
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:id="@+id/armyButtonFormOne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_selector"
            android:text="Army \n آرمی" />

        <Button
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:id="@+id/rangerButtonFormOne"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:text="Rangers \n رینجرز" />
        <Button

            android:id="@+id/fcButtonFormOne"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:text="Frontier Constabulary \n فرنٹیئر کانسٹیبلری" />

        <Button
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:id="@+id/levisButtonFormOne"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_selector"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:text="Levis \n لیویز" />
        <Button
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:id="@+id/khasadarButtonFormOne"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_marginBottom="5dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:text="Khasadar \n چوکیدار" />
        <Button
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:id="@+id/presidingOfficerButtonFormOne"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_marginBottom="5dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:text="Presiding Officer \n پریزائیڈنگ  افسر" />
        <Button
            android:layout_weight="1"
            android:id="@+id/anyOtherButtonFormOne"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_marginBottom="5dp"
            android:layout_height="0dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:text="AnyOther \n دیگرافراد" />

    </LinearLayout>

    </ScrollView>


</RelativeLayout>

