<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ededed"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/topLable"
        android:textSize="25sp"
        android:gravity="center"
        android:background="#E1E2D4"
        android:text="1 of 10"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/textview"
        android:textSize="25sp"
        android:textColor="#808080"
        android:gravity="center"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLable"
        android:text="Constituency \n پولنگ اسٹیشن وقت پر نہ کھلنے کی وجہ؟"
        />


    <EditText
        android:id="@+id/q1EditTextFormEleven"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_shape_edittext"
        android:layout_width="200dp"
        android:gravity="center|center_horizontal"
        android:layout_height="60dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>

